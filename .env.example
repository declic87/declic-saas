# ===========================================
# DÉCLIC ENTREPRENEURS - Configuration
# ===========================================

# Base URL de l'application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# SUPABASE (Auth + Database)
# ===========================================
# Créez un projet sur https://supabase.com
# Trouvez ces clés dans Settings > API

NEXT_PUBLIC_SUPABASE_URL=https://votre-projet.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# URL de connexion à la base de données PostgreSQL
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://postgres:[VOTRE_MOT_DE_PASSE]@db.xxxxx.supabase.co:5432/postgres

# ===========================================
# STRIPE (Paiements)
# ===========================================
# Créez un compte sur https://stripe.com
# Mode Test d'abord, puis Live

STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# IDs des produits Stripe (créez-les dans le Dashboard)
STRIPE_PRICE_PLATEFORME=price_...
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_EXPERT=price_...
STRIPE_PRICE_FORMATION_ESS=price_...
STRIPE_PRICE_FORMATION_IMMO=price_...

# ===========================================
# CALENDLY (RDV)
# ===========================================
CALENDLY_API_KEY=eyJraWQiOiIxY2...
